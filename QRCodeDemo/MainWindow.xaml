<Window x:Class="QRCodeDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="420" Width="600" Icon="logo.ico">
    <Grid>
        <Border BorderBrush="Thistle" CornerRadius="50" BorderThickness="2" HorizontalAlignment="Left" Height="300" Margin="50,40,0,0" VerticalAlignment="Top" Width="300" >
            <Image Name="QRImage">
                <Image.Clip>
                    <RectangleGeometry Rect="5,5,290,290" RadiusX="50" RadiusY="50"></RectangleGeometry>
                </Image.Clip>
            </Image>

        </Border>
        <TextBlock HorizontalAlignment="Left" Margin="50,20,0,0" TextWrapping="Wrap" Text="http://chart.apis.google.com/chart?chs=300x300&amp;cht=qr&amp;chl=" VerticalAlignment="Top"/>
        <TextBox Name="textQR" HorizontalAlignment="Left" Height="100" Margin="415,17,0,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Text="Supegg " VerticalAlignment="Top" Width="160"/>
        <Button Name="btnGen" Content="Generate" HorizontalAlignment="Left" Margin="415,140,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="500,140,0,0" VerticalAlignment="Top" Width="75" Click="btnSave_Click"/>
    </Grid>
</Window>
